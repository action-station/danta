<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="{{caption}}">

    <meta property="og:locale" content="en_NZ"/>
    <meta property="og:url" content="{{&common.base_url}}/{{name}}" />
    <!--meta property="og:type" content="article" /-->
    <meta property="og:title" content="{{common.title}} | {{title}}" />
    {{#thumbnail}}
    <meta property="og:image" content="https:{{&thumbnail.file.url}}" />
    {{/thumbnail}}
    <meta property="og:description" content="{{caption}}" />
    <meta property="og:site_name" content="ActionStation" />

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:url" content="{{&common.base_url}}/{{name}}">
    <meta name="twitter:title" content="{{common.title}} | {{title}}">
    <meta name="twitter:description" content="{{caption}}">
    <meta name="twitter:image" content="https:{{&thumbnail.file.url}}">
    <meta name="twitter:site" content="@ActionStation"/>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

    <!-- ShareThis -->
    <script type='text/javascript' src='https://platform-api.sharethis.com/js/sharethis.js#property=5fc4a794b4aee5001239a088&product=sop' async='async'></script>

    <title>{{common.title}} | {{title}}</title>

    <base href="{{&common.base_url}}" />
  </head>
  <body class="{{content_type}} {{name}}">

    {{> layout/nav}}

    <main role="main" class="mx-auto my-4 container">
